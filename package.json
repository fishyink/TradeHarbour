{
  "name": "trade-harbour",
  "version": "1.5.0",
  "description": "Trade Harbour - One harbour, one dashboard, all your trades. A unified trading command center for cryptocurrency exchanges.",
  "main": "dist/main.js",
  "homepage": "https://github.com/fishyink/TradeHarbour",
  "author": "fishyink",
  "repository": {
    "type": "git",
    "url": "https://github.com/fishyink/TradeHarbour.git"
  },
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron dist/main.js",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:renderer:check": "tsc && vite build",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:portable": "npm run build && electron-builder --win --config.nsis.oneClick=false --config.nsis.allowToChangeInstallationDirectory=true"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "dependencies": {
    "@types/react-beautiful-dnd": "^13.1.8",
    "crypto-js": "^4.2.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "recharts": "^2.10.4",
    "zustand": "^4.5.7"
  },
  "build": {
    "appId": "com.fishyink.tradeharbour",
    "productName": "Trade Harbour",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "data/.gitkeep",
      "data/README.md",
      "assets/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data"
      },
      {
        "from": "install-dependencies.bat",
        "to": "install-dependencies.bat"
      },
      {
        "from": "fix-white-screen.bat",
        "to": "fix-white-screen.bat"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "forceCodeSigning": false,
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "TradeHarbour-${version}-portable.exe"
    }
  }
}
