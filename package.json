{
  "name": "trade-harbour",
  "version": "1.7.0",
  "description": "Trade Harbour - One harbour, one dashboard, all your trades. A unified trading command center for cryptocurrency exchanges.",
  "main": "dist/electron/main.js",
  "homepage": "https://github.com/fishyink/TradeHarbour",
  "author": "fishyink",
  "repository": {
    "type": "git",
    "url": "https://github.com/fishyink/TradeHarbour.git"
  },
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron dist/electron/main.js",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:renderer:check": "tsc && vite build",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:all": "npm run build && electron-builder --win --mac --linux",
    "dist:portable": "npm run build && electron-builder --win --config.nsis.oneClick=false --config.nsis.allowToChangeInstallationDirectory=true",
    "build:mac": "electron-builder --mac --x64 --arm64",
    "build:windows": "electron-builder --win"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "dependencies": {
    "@types/react-beautiful-dnd": "^13.1.8",
    "ccxt": "^4.5.7",
    "crypto-js": "^4.2.0",
    "electron-log": "^5.4.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "recharts": "^2.10.4",
    "zustand": "^4.5.7"
  },
  "build": {
    "appId": "com.fishyink.tradeharbour",
    "productName": "Trade Harbour",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "data/.gitkeep",
      "data/README.md",
      "package.json",
      "!dist/**/*.map",
      "!src",
      "!.git",
      "!*.md"
    ],
    "asarUnpack": [
      "node_modules/electron-updater/**/*"
    ],
    "extraResources": [
      {
        "from": "install-dependencies.bat",
        "to": "install-dependencies.bat"
      },
      {
        "from": "fix-white-screen.bat",
        "to": "fix-white-screen.bat"
      }
    ],
    "extraFiles": [
      {
        "from": "data/README-USER-DATA.txt",
        "to": "data/README-USER-DATA.txt"
      },
      {
        "from": "data/README.md",
        "to": "data/README.md"
      }
    ],
    "win": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "forceCodeSigning": false,
      "signAndEditExecutable": false,
      "artifactName": "TradeHarbour-${version}-portable.zip",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.finance",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "identity": null,
      "type": "distribution"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office",
      "artifactName": "TradeHarbour-${version}-linux.AppImage"
    },
    "dmg": {
      "title": "Trade Harbour ${version}",
      "format": "UDBZ",
      "internetEnabled": false,
      "sign": false,
      "window": {
        "width": 680,
        "height": 380
      },
      "contents": [
        {
          "x": 150,
          "y": 190,
          "type": "file"
        },
        {
          "x": 350,
          "y": 190,
          "type": "dir",
          "path": "data"
        },
        {
          "x": 550,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
